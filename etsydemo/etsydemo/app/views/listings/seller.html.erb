<table>
  <tr>
    <th class= "center">Images</th>
    <th class= "center">Name</th>
    <th class= "center">Description</th>
    <th class= "center">Prices</th>
    <th class= "center">Action</th>
  </tr>
  <% @listings.each do |listing| %>
    <tr>
      <td><%= image_tag listing.images.url(:thumb) %></td>
      <td><%= listing.name %>
      <td><%= listing.description %>
      <td><%= number_to_currency(listing.price) %>
      <td>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Action<span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><%= link_to "View", listing %></li>
            <li><%= link_to "Edit", edit_listing_path(listing) %></li>
            <li><%= link_to "Destroy", listing, method: :delete, data: {confirm: "Are you sure?"} %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>

